{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Each post has the blog logo at the top, with a link back to the home page }}
        <header class="post-header">
            <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{else}}
                    <span class="blog-title">{{@blog.title}}</span>
                {{/if}}
            </a>
        </header>

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

            

            <h1 class="post-title">{{{title}}}</h1>

            <section class="post-content">
                {{content}}
            </section>
            <!--<a class="comment-twitter" href="https://twitter.com/intent/tweet?text=Awesome%20post%21%20%E2%80%94%20{{url absolute="true"}}%20%40chrisparaiso"><i class="fa fa-reply fa-rotate-180"></i> Comment on Twitter</a>-->
            <footer class="post-footer clearfix">
                
                <section class="author">
                    <h2>Written by</h2>
                    <img class="author-image" src="{{author.image}}">
                    <div class="author-info">
                        <h4>{{author.name}}</h4>
                        <p>Updated on <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM D, YYYY'}}</time></p>
                   </div>
                </section>
                <section class="published">
                    <h2>Published in</h2>
                    {{#if tags}}
                        <ul>
                            {{#foreach tags}}
                                <li><a href="{{url}}">{{name}}</a></li>
                            {{/foreach}}
                        </ul>
                    {{else}}
                        <p>This post was not published with tags.</p>
                    {{/if}}
                </section>

